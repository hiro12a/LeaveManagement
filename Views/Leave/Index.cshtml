@model IEnumerable<LeaveTypeVM>
@{
    ViewData["Title"] = "Index";
}

<div class="py-5">
<div class="d-flex justify-content-between pb-3">
    <div>
        <h1>Leave Types</h1>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Upsert" style="width:150px">Create New</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DefaultDays
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Upsert" asp-route-id="@obj.Id"><span class="bi bi-pencil-fill"></span></a>

                    <!--Display popup when you click delete-->
                    <a type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-@(obj.Id)"><span class="bi bi-trash-fill"></a>

                    <!--Popup-->
                    <div class="modal fade" id="delete-@(obj.Id)" table-index="-1" aria-hidden="true" data-bs-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="card-header">
                                    <h1 class="text-center">Delete @obj.Name</h1>
                                </div>
                                <div class="card-body">
                                    <p class="text-center">Are you sure you want to delete @obj.Name?</p>
                                </div>
                                <div class="d-flex justify-content-center pb-4">
                                    <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                                    <btn type="button" data-bs-dismiss="modal" class="btn btn-secondary">Cancel</btn> <!--Closes the popup-->
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function(){
            $('.table').DataTable({});
        });
    </script>
}