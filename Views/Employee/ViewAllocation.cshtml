@model EmployeeAllocationVM
@{
    ViewData["Title"] = "Index";
}

<div class="py-5">
<div class="d-flex justify-content-between pb-3">
    <div>
        <h1>View Allocations for @Model.FirstName @Model.LastName</h1>
    </div>
</div>

<div>
    <div class="row">
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateJoined)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateJoined)
            </dd>
        </dl>
        <hr/>
    </div>
<div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>Leave Allocations</h3>
            <a class="btn btn-primary" asp-controller="Employee" asp-action="EmployeeLeaveAllocation">Back to List</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table">
            <thead class="fw-bold">
                <td>Leave Type</td>
                <td>Allocated Days</td>
                <td>Remaining Days</td>
                <td></td>
            </thead>
            <tbody>
                @foreach(var obj in Model.LeaveAllocations)
                {
                    <tr>
                        <td class="border bg-light fw-bold" style="width:20%">@obj.LeaveType.Name</td>
                        <td class="border" style="width:20%">@obj.LeaveType.DefaultDays</td>
                        <td class="border" style="width:20%">@obj.NumberOfDays</td>
                        <td class="border" style="width:20%">
                            <!--Edit Button-->
                            <a class="btn btn-warning" asp-controller="Employee" asp-action="EditLeaveAllocation">Edit Allocation</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>