@model RegisterVM

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <div class="card w-100">
            <div class="card-header text-center">
                <h3>Register User</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" />
                            <label asp-for="Email" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" aria-required="true" />
                            <label asp-for="FirstName" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <input asp-for="LastName" class="form-control" aria-required="true" />
                            <label asp-for="LastName" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                            <label asp-for="PhoneNumber" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <input asp-for="Password" class="form-control" aria-required="true" />
                            <label asp-for="Password" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                            <label asp-for="ConfirmPassword" class="form-label text-muted ms-2"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!--DropDown for admins only-->
                        @if(User.IsInRole(SD.Role_Admin))
                        {
                            <div class="mb-3">
                                <select asp-for="Role" asp-items="@Model.RoleList" class="form-select" style="height:50px;">
                                    <option disabled selected>Select Role</option>
                                </select>                         
                            </div>
                        }                     
                    </div>
                    <div class="pt-3">
                        <button type="submit" class="btn btn-success w-100">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}