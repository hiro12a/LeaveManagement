<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagement.styles.css" asp-append-version="true" />

    <!--Lets us use database API-->
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!--Bootstrap Icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <header>
        <nav class="navbar d-flex justify-content-between navbar-expand-sm navbar-light border-bottom box-shadow" style="background-color: #0C2D48">
            @if(User.IsInRole(SD.Role_Admin))
            {
                <a class="mx-3 navbar-brand text-light" asp-area="" asp-controller="LeaveRequest" asp-action="Index">Leave Management</a>
            }
            else
            {
                <a class="mx-3 navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Leave Management</a>
            }
            <partial name="_LoginPartial"/>
        </nav>
    </header>
    <div class="d-flex">
        <div class="col-2 bg-white pt-2 fs-5">
            @if(User.IsInRole(SD.Role_Admin))
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="Index"><i class="bi bi-house-door-fill fs-3"></i> Home</a>
            }
            else{
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill fs-3"></i> Home</a>
            }

            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="Create"><i class="bi bi-pencil-fill fs-3"></i> Apply For Leave</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="LeaveRequest" asp-action="MyLeave"><i class="bi bi-file-earmark-richtext fs-3"></i> My Leave</a>
            <div class="nav-item dropdown">
                @if(User.IsInRole(SD.Role_Admin))
                {
                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-gear fs-3"></i> Leave Management
                    </a>
                    <ul class="dropdown-menu mx-5" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item text-dark" asp-controller="Leave" asp-action="Index">Leave Types</a></li>
                        <li><a class="dropdown-item text-dark" asp-controller="Employee" asp-action="EmployeeLeaveAllocation">Leave Allocations</a></li>
                        <li><a class="dropdown-item text-dark" asp-controller="LeaveRequest" asp-action="Index">Leave Requests</a></li>
                    </ul>
                } 
            </div>
        </div>
        <div class="col-10 container pt-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <!--Make sure it is ./lib-->
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!--Sweet Alert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!--Lets us use database API-->
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
